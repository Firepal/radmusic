{
    "nuke_wavs_for_flac": false,
    "copy_aux_files": false,

    "convert_exts": [".wav",".flac"],

    "targets": {
        "UMC_opuslight":{
            "opts": "-ar 48000 -b:a 96k -application audio",
            "file_ext": "opus",
            "convert_exts": [".wav",".flac",".ogg",".mp3"]
        },
        "UMC_mp3": {
            "opts": "-ar 44100 -b:a 128k",
            "file_ext": "mp3",
            "convert_exts": [".wav",".flac",".ogg"]
        }
    }
}